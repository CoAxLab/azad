pmid = {27251623},
title = {{Dopamine Release in the Nonhuman Primate Caudate and Putamen Depends upon Site of Stimulation in the Subthalamic Nucleus.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/27251623{\%}5Cnhttp://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4887566},
