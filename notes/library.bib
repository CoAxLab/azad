title = {{Phase-dependent modulation as a novel approach for therapeutic brain stimulation.}},
url = {http://journal.frontiersin.org/article/10.3389/fncom.2015.00026/abstract},
volume = {9},
year = {2015}
}
@article{DaCunha2015,
