keywords = {Associative circuit,Behavior,Cortico-basal ganglia-thalamocortical circuits,Deep brain stimulation,Hemiballismus,Lesions,Limbic circuit,Motor circuit,Parkinson disease,Subthalamic nucleus},
number = {6},
